<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.neging.messagepicker"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="16" android:maxSdkVersion="16"/>

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
	        <service 
	            android:name="org.neging.messagepicker.MessagePickerService" android:enabled="@bool/is_jelly_bean"
	            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
				<intent-filter>
				    <action android:name="android.accessibilityservice.AccessibilityService" />
  				</intent-filter>
  				<meta-data 
  				    android:name="android.accessibilityservice"
  				    android:resource="@xml/accessibility_service_config" /> 
  			</service>
            <service
	            android:name="org.neging.messagepicker.MessagePickerServicePreJB" android:enabled="@bool/is_not_jelly_bean"> 
				<intent-filter>
				    <action android:name="android.accessibilityservice.AccessibilityService" /> 
  				</intent-filter>
  				<meta-data 
  				    android:name="android.accessibilityservice"
  				    android:resource="@xml/accessibility_service_config" /> 
  			</service>
        <activity 
	            android:name="org.neging.messagepicker.MessagePickerActivity"
	            android:label="@string/app_name" 
	            android:theme="@style/MyAppCompat"
	            android:configChanges="orientation">
	            <intent-filter>
	                <action android:name="android.intent.action.MAIN" />
	
	                <category android:name="android.intent.category.LAUNCHER" />
	            </intent-filter>
	        </activity>
	        <activity 
	            android:name="org.neging.messagepicker.EachMessageListActivity"
	            android:theme="@style/MyAppCompat"
	            android:parentActivityName="org.neging.messagepicker.MessagePickerActivity"
	            android:configChanges="orientation">
	            <meta-data
	                android:name="android.support.PARENT_ACTIVITY"
	                android:value="org.neging.messagepicker.MessagePickerActivity" />
	        </activity>
    </application>
</manifest>
